/* ============================================
   CSS VARIABLES
   ============================================ */
:root {
  --white: #ffffff;
  --casual: #1a1a1a;
  --border: rgba(0, 0, 0, 0.1);
  --hover-gray: #999999;
}

/* ============================================
   GLOBAL STYLES
   ============================================ */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

@media (min-width: 768px) {
  * { cursor: none !important; }
}

body {
  font-family: 'Pragmatica', 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  height: 100vh;
  overflow: hidden;
  background: var(--white);
  color: var(--casual);
  -webkit-font-smoothing: antialiased;
}

.app {
  height: 100vh;
  overflow: hidden;
}

/* ============================================
   CUSTOM CURSOR - Original Webflow Style
   ============================================ */
.cursor {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 9999;
}

.cursor_dot1 {
  position: absolute;
  width: 6px;
  height: 6px;
  background-color: var(--casual);
  border-radius: 50%;
  margin-left: -3px;
  margin-top: -3px;
  will-change: transform;
  transition: width 0.35s cubic-bezier(0.16, 1, 0.3, 1),
              height 0.35s cubic-bezier(0.16, 1, 0.3, 1),
              margin 0.35s cubic-bezier(0.16, 1, 0.3, 1),
              background-color 0.35s;
}

.cursor_dot1.is--larger {
  width: 80px;
  height: 80px;
  margin-left: -40px;
  margin-top: -40px;
  background-color: rgba(153, 153, 153, 0.2);
}

.cursor_dot2 {
  position: absolute;
  width: 52px;
  height: 52px;
  border: 2px solid var(--casual);
  border-radius: 50%;
  margin-left: -26px;
  margin-top: -26px;
  will-change: transform;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
}

.cursor_dot2.is--larger {
  width: 80px;
  height: 80px;
  margin-left: -40px;
  margin-top: -40px;
  background-color: #000;
  border-color: #000;
}

/* Cursor Text - Letter Stagger Animation */
.cursor_text {
  display: flex;
  gap: 1px;
  color: var(--white);
  font-size: 12px;
  font-weight: 500;
  letter-spacing: 1.2px;
}

.cursor_text span {
  display: inline-block;
  opacity: 0;
  transform: translateY(10px);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.cursor_text.is--visible span {
  opacity: 1;
  transform: translateY(0);
}

/* Stagger delays for each letter */
.cursor_text.is--visible span:nth-child(1) { transition-delay: 0s; }
.cursor_text.is--visible span:nth-child(2) { transition-delay: 0.03s; }
.cursor_text.is--visible span:nth-child(3) { transition-delay: 0.06s; }
.cursor_text.is--visible span:nth-child(4) { transition-delay: 0.09s; }
.cursor_text.is--visible span:nth-child(5) { transition-delay: 0.12s; }
.cursor_text.is--visible span:nth-child(6) { transition-delay: 0.15s; }
.cursor_text.is--visible span:nth-child(7) { transition-delay: 0.18s; }
.cursor_text.is--visible span:nth-child(8) { transition-delay: 0.21s; }
.cursor_text.is--visible span:nth-child(9) { transition-delay: 0.24s; }

/* ============================================
   NAVBAR
   ============================================ */
.navbar_component {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 10vh;
  min-height: 80px;
  z-index: 1000;
  background: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 16px 12px;
}

.navbar_logo-wrapper {
  display: flex;
  flex-direction: column;
}

.navbar_name {
  font-size: 24px;
  font-weight: 400;
  color: var(--casual);
  line-height: 1.3;
  margin: 0;
}

.navbar_tagline {
  font-size: 12px;
  color: var(--casual);
  line-height: 1.4;
}

.navbar_menu {
  display: flex;
}

.navbar_link {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  font-size: 13px;
  letter-spacing: 0.05em;
  color: var(--casual);
  text-decoration: none;
  text-transform: capitalize;
  transition: background-color 0.3s;
}

.navbar_link:hover {
  background-color: rgba(153, 153, 153, 0.1);
}

.menu-button {
  display: none;
  flex-direction: column;
  justify-content: center;
  gap: 6px;
  width: 40px;
  height: 40px;
  background: none;
  border: none;
  padding: 8px;
}

.menu-icon {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.menu-icon span {
  display: block;
  width: 24px;
  height: 1.5px;
  background: var(--casual);
  transition: transform 0.3s;
}

/* ============================================
   MAP WRAPPER & SECTIONS TRACK
   ============================================ */
.map-wrapper {
  margin-top: 10vh;
  height: 90vh;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.map-wrapper::-webkit-scrollbar {
  display: none;
}

.sections-track {
  display: flex;
  flex-direction: row;
  height: 90vh;
  width: 700vw;
}

/* ============================================
   TRANSITION SECTIONS
   ============================================ */
.section_transition {
  flex: 0 0 100vw;
  width: 100vw;
  height: 90vh;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  scroll-snap-align: start;
}

/* ============================================
   PORTFOLIO SECTION
   ============================================ */
.section_portfolio {
  flex: 0 0 100vw;
  width: 100vw;
  height: 90vh;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 0;
  scroll-snap-align: start;
  overflow: hidden;
}

.portfolio_column {
  height: 90vh;
  overflow: hidden;
  position: relative;
}

.portfolio_column-inner {
  display: flex;
  flex-direction: column;
  gap: 0;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
}

.portfolio_column-inner.up {
  animation-name: scrollUp;
}

.portfolio_column-inner.down {
  animation-name: scrollDown;
}

@keyframes scrollUp {
  0% { transform: translateY(0); }
  100% { transform: translateY(-50%); }
}

@keyframes scrollDown {
  0% { transform: translateY(-50%); }
  100% { transform: translateY(0); }
}

/* ============================================
   STORY CARD
   ============================================ */
.story-card {
  position: relative;
  width: 100%;
  flex-shrink: 0;
}

.story-card-inner {
  position: relative;
  padding: 12px;
}

.story-img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
}

.story-overlay {
  position: absolute;
  top: 12px;
  left: 12px;
  right: 12px;
  bottom: 12px;
  background-color: transparent;
  transition: background-color 0.4s ease;
  pointer-events: none;
}

.story-card:hover .story-overlay {
  background-color: rgba(0, 0, 0, 0.5);
}

.story-caption {
  position: absolute;
  bottom: 24px;
  left: 24px;
  right: 24px;
  color: var(--white);
  opacity: 0;
  transform: translateY(10px);
  transition: opacity 0.4s ease, transform 0.4s ease;
  pointer-events: none;
}

.story-card:hover .story-caption {
  opacity: 1;
  transform: translateY(0);
}

.brand-title {
  font-size: 28px;
  font-weight: 400;
  margin: 0 0 4px;
  line-height: 1.2;
}

.text-block {
  font-size: 11px;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  margin-bottom: 8px;
}

.season-subtitle {
  font-size: 13px;
  opacity: 0.8;
}

/* ============================================
   VIDEO CARD
   ============================================ */
.video-card {
  position: relative;
  width: 100%;
  flex-shrink: 0;
}

.video-card.is-portrait {
  aspect-ratio: 3/4;
}

.video-card.is-landscape {
  aspect-ratio: 16/9;
}

.video-card-inner {
  position: relative;
  padding: 12px;
  height: 100%;
}

.video-hover-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video-poster {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.3s;
}

.video-poster.is-hidden {
  opacity: 0;
}

.video-iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.5s;
}

.video-iframe.is-loaded {
  opacity: 1;
}

.video-card .story-overlay {
  top: 12px;
  left: 12px;
  right: 12px;
  bottom: 12px;
}

.video-card:hover .story-overlay {
  background-color: rgba(0, 0, 0, 0.5);
}

.video-card .story-caption {
  bottom: 24px;
  left: 24px;
  right: 24px;
}

.video-card:hover .story-caption {
  opacity: 1;
  transform: translateY(0);
}

/* ============================================
   SERVICES SECTION - Webflow Grid
   ============================================ */
.section_services {
  flex: 0 0 100vw;
  width: 100vw;
  height: 90vh;
  display: grid;
  grid-template-columns: 20% 50% 30%;
  grid-template-rows: auto 1fr auto;
  padding: 48px 24px;
  scroll-snap-align: start;
  overflow: hidden;
}

.service_request {
  grid-column: 1;
  grid-row: 1;
}

.services_content {
  grid-column: 2;
  grid-row: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.service_focused_on {
  grid-column: 1;
  grid-row: 2;
  align-self: start;
  padding-top: 48px;
}

.services_services {
  grid-column: 2;
  grid-row: 2;
  display: flex;
  gap: 48px;
  padding-top: 48px;
}

.services_column {
  display: flex;
  flex-direction: column;
  gap: 8px;
  font-size: 16px;
  line-height: 1.8;
  color: var(--casual);
}

.services_cta-wrapper {
  grid-column: 1;
  grid-row: 3;
  align-self: end;
}

.services_email {
  grid-column: 2;
  grid-row: 3;
  align-self: end;
}

.services_label {
  font-size: 12px;
  letter-spacing: 0.1em;
  text-transform: capitalize;
  color: var(--casual);
}

.services_link {
  font-size: 18px;
  color: var(--casual);
  text-decoration: none;
  background: none;
  border: none;
  padding: 0;
  font-family: inherit;
  text-align: left;
  transition: color 0.3s;
}

.services_link:hover {
  color: var(--hover-gray);
}

.vita-button {
  cursor: none;
}

/* ============================================
   ABOUT SECTION
   ============================================ */
.section_about {
  flex: 0 0 100vw;
  width: 100vw;
  height: 90vh;
  display: flex;
  flex-direction: column;
  padding: 48px 24px;
  gap: 48px;
  overflow-y: auto;
  overflow-x: hidden;
  scroll-snap-align: start;
}

.about_text-div {
  max-width: 70%;
}

.about_heading {
  font-size: 32px;
  font-weight: 400;
  margin-bottom: 24px;
}

.about_bio {
  font-size: 16px;
  line-height: 1.7;
}

.about_preview-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16px;
}

.about_preview-item {
  position: relative;
  display: flex;
  flex-direction: column;
}

.about_preview-image {
  width: 100%;
  aspect-ratio: 1;
  object-fit: cover;
  cursor: pointer;
  transition: transform 0.3s;
}

.about_preview-image:hover {
  transform: scale(1.02);
}

/* Number OVER the image */
.about_preview-label {
  position: absolute;
  bottom: 8px;
  left: 8px;
  font-size: 12px;
  color: var(--white);
  text-shadow: 0 1px 3px rgba(0,0,0,0.5);
  pointer-events: none;
}

/* ============================================
   LIGHTBOX - Apple Smooth Effect
   ============================================ */
.lightbox-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.95) 100%);
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9998;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.35s ease-out;
}

.lightbox-overlay.is-visible {
  opacity: 1;
  pointer-events: auto;
}

.lightbox-image {
  max-width: 90vw;
  max-height: 90vh;
  object-fit: contain;
  transform: scale(0.95);
  opacity: 0;
  transition: transform 0.35s ease-out, opacity 0.35s ease-out;
}

.lightbox-overlay.is-visible .lightbox-image {
  transform: scale(1);
  opacity: 1;
}

/* ============================================
   CONTACT SECTION - Webflow 2-Column Grid
   ============================================ */
.section_contact {
  flex: 0 0 100vw;
  width: 100vw;
  height: 90vh;
  display: grid;
  grid-template-columns: 1fr 1fr;
  scroll-snap-align: start;
  overflow: hidden;
}

.contact_heading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48px;
}

.contact_heading {
  font-size: 72px;
  font-weight: 400;
  line-height: 1.1;
  letter-spacing: 0.02em;
  text-align: left;
}

.contact_content-wrapper {
  display: flex;
  flex-direction: column;
  padding: 48px;
  gap: 32px;
}

.contact_info-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.contact_subheading {
  font-size: 18px;
  font-weight: 400;
  margin: 0;
}

.contact_description {
  font-size: 14px;
  line-height: 1.7;
  color: var(--casual);
  max-width: 400px;
}

.social-dots-wrapper {
  display: flex;
  gap: 12px;
  margin-top: 16px;
}

.social-dot {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid var(--casual);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s, border-color 0.3s;
}

.social-dot:hover {
  background-color: var(--casual);
  border-color: var(--casual);
}

.social-icon {
  width: 14px;
  height: 14px;
  background: var(--casual);
  border-radius: 2px;
  transition: background 0.3s;
}

.social-dot:hover .social-icon {
  background: var(--white);
}

.contact_form-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.contact_form {
  display: flex;
  flex-direction: column;
  gap: 16px;
  max-width: 400px;
}

.form_input,
.form_textarea {
  width: 100%;
  padding: 16px 0;
  font-size: 14px;
  font-family: inherit;
  border: none;
  border-bottom: 1px solid var(--border);
  background: transparent;
  outline: none;
  transition: border-color 0.3s;
}

.form_input:focus,
.form_textarea:focus {
  border-color: var(--casual);
}

.form_textarea {
  min-height: 120px;
  resize: vertical;
}

.button {
  padding: 16px 32px;
  font-size: 13px;
  font-family: inherit;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  background: var(--casual);
  color: var(--white);
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
  align-self: flex-start;
  margin-top: 16px;
}

.button:hover {
  background-color: var(--hover-gray);
}

.button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.form-success {
  padding: 24px;
  background: rgba(0, 200, 100, 0.1);
  color: #00c864;
  border-radius: 4px;
}

.form-error {
  padding: 12px;
  background: rgba(255, 0, 0, 0.1);
  color: #ff4444;
  border-radius: 4px;
  font-size: 14px;
}

/* ============================================
   VITA MODAL
   ============================================ */
.vita-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3000;
  animation: fadeIn 0.3s ease;
}

.vita-modal.is-closing {
  animation: fadeOut 0.5s ease forwards;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

.vita-content {
  background: var(--white);
  padding: 48px;
  max-width: 500px;
  width: 90%;
  position: relative;
}

.vita-close {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 32px;
  height: 32px;
  background: none;
  border: none;
  font-size: 20px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vita-content h3 {
  font-size: 24px;
  font-weight: 400;
  margin-bottom: 24px;
}

.vita-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.vita-form input,
.vita-form textarea {
  width: 100%;
  padding: 16px 0;
  font-size: 14px;
  font-family: inherit;
  border: none;
  border-bottom: 1px solid var(--border);
  background: transparent;
  outline: none;
}

.vita-form textarea {
  min-height: 100px;
  resize: vertical;
}

/* ============================================
   MOBILE NAV OVERLAY
   ============================================ */
.w-nav-overlay {
  display: none;
  position: fixed;
  top: 10vh;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--white);
  flex-direction: column;
  padding: 24px;
  z-index: 999;
}

.w-nav-overlay.is-open {
  display: flex;
}

.w-nav-overlay .navbar_link {
  padding: 16px 0;
  border-bottom: 1px solid var(--border);
  font-size: 18px;
}

/* ============================================
   RESPONSIVE
   ============================================ */
@media (max-width: 991px) {
  .contact_heading {
    font-size: 56px;
  }
  
  .services_services {
    flex-direction: column;
    gap: 24px;
  }
}

@media (max-width: 767px) {
  .cursor { display: none; }
  .video-card { display: none !important; }

  .navbar_menu { display: none; }
  .menu-button { display: flex; }

  .section_portfolio {
    grid-template-columns: 1fr 1fr;
  }

  .sections-track {
    width: 700vw;
  }

  .section_services {
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    gap: 32px;
    padding: 24px 16px;
    overflow-y: auto;
  }

  .service_request,
  .services_content,
  .service_focused_on,
  .services_services,
  .services_cta-wrapper,
  .services_email {
    grid-column: 1;
    grid-row: auto;
    padding-top: 0;
  }

  .services_services {
    flex-direction: column;
    gap: 16px;
  }

  .section_about {
    padding: 32px 16px;
  }
  
  .about_text-div {
    max-width: 100%;
  }
  
  .about_preview-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .section_contact {
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
    overflow-y: auto;
  }

  .contact_heading-wrapper {
    padding: 32px 16px;
    justify-content: flex-start;
  }

  .contact_heading {
    font-size: 40px;
  }

  .contact_content-wrapper {
    padding: 16px;
  }
}

@media (max-width: 479px) {
  .navbar_name {
    font-size: 20px;
  }
  
  .navbar_tagline {
    font-size: 10px;
  }
  
  .brand-title {
    font-size: 22px;
  }
  
  .contact_heading {
    font-size: 32px;
  }
}
